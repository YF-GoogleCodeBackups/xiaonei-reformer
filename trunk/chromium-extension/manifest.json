{
	"name": "人人网改造器",
	"version": "3.3.4.487",
	"manifest_version": 2,
	"description": "为人人网（renren.com，原校内网xiaonei.com）清理广告、新鲜事、各种烦人的通告，增加更多功能……",
	"icons": { "16": "image/logo_16.png", "64": "image/logo_64.png", "128": "image/logo_128.png" },
	"background": {
		"scripts": ["background.js"]
	},
	"background_page": "background.html",
	"permissions": ["tabs","http://renren.com/","http://*.renren.com/"],
	"content_scripts": [{
		"matches": ["http://renren.com/*", "http://*.renren.com/*"],
		"exclude_matches": ["http://wpi.renren.com/*", "http://*.renren.com/*proxy*"],
		"js": ["xiaonei_reformer.user.js"],
		"run_at": "document_start",
		"all_frames": true
	}]
}

